{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,  // Feelsgoodman.png
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "**/typings.json"
  ],
  "types": [
    "node"
  ],
  "typeroots": [
    "node_modules/@types"
  ],
  "files": [
    "node_modules/phaser/typescript/phaser.d.ts"
  ]
}
