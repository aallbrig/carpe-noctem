{
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces"],
    "member-access": [true, "check-accessor"],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "semicolon": [true, "always"],
    "whitespace": [
      true, 
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "align": [true, "arguments", "parameters", "statements"],
    "prefer-const": true,
    "eofline": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unused-variable": [true, "check-parameters", {"ignore-pattern": "React"}],
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true
  }
}
